@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <style>
        .p1 {
            background-image: url(/images/index/index.png);
            width: 100%;
            height: 500px;
            background-repeat: no-repeat;
            opacity: 0.9;
            background-size: 100%;
            border-bottom: 0.5px solid #000000;
        }

        .welcome {
            font-family: Georgia, 'Times New Roman', Times, serif;
            color: white;
            text-align: center;
            padding-top: 200px;
            padding-bottom: 30px;
            font-size: 3em;
            text-shadow: 3px 3px 3px black;
        }

        .p2 {
            background-color: white;
            color: black;
            width: auto;
            height: 330px;
        }
        .p2-txt {
            color: #888888;
            font-family: Arial, Helvetica, sans-serif;
            font-size: larger;
            text-align: center;
            border-bottom: 2px solid #000000;
            margin-top: 20px;
            margin-bottom: 20px;
            padding: 10px 0 10px 0;
        }

        .covid {
            padding-top: 10px;
            padding-bottom: 5px;
            color: black;
            text-align: center;
        }

        .covid_link {
            color: white;
            padding-top: 5px;
            padding-bottom: 5px;
            text-align: center;
            background-color: black;
            border-radius: 40px;
            margin-left: 30%;
            margin-right: 30%;
        }

        .p3 {
            background-color: #F8F8F8;
            width: auto;
            height: 1100px;
            box-shadow:2px 2px 2px 2px grey;
        }

        .p3-txt {
            width: auto;
            height: 300px;
            padding-bottom: 20px;
            margin: 20px 20px 0 20px;
        }

        .p3-title {
            color: #383838;
            border-bottom: 3px solid #000000;
            padding-top: 20px;
            font-family:Arial, Helvetica, sans-serif;
            font-weight:bold;
        }

        .p3-img {
            float: left;
            margin-right: 20px;
            margin-top: 20px;
        }
        .p4{
            width:auto;
            height:700px;
        }
    </style>
</head>

<body class="index_body">
    <div class="p1">
        <h1 class="welcome"><b>Hey,you<br />Welcome to University Of Newcastle!</b></h1>
    </div>
